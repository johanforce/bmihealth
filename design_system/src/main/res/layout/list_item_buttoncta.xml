<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivStartIcon"
            style="@style/ListItemIcon.Start"
            android:layout_centerVertical="true"
            android:visibility="gone"
            tools:src="@drawable/ic_arrow_down" />

        <com.jarvis.design_system.textview.CustomTextView
            android:id="@+id/tvTitle"
            style="@style/ListItem.Title"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/viewControlWorkOut"
            android:layout_toEndOf="@+id/ivStartIcon"
            tools:text="Đây là title dài dằng dặc" />

        <FrameLayout
            android:id="@+id/viewControlWorkOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/px8">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivEndIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:src="@drawable/ic_google" />

            <com.jarvis.design_system.button.JxButton
                android:id="@+id/btnSecondary"
                style="@style/ButtonSecondary.Mini"
                android:layout_width="wrap_content"
                android:visibility="gone"
                tools:text="Secondary" />

            <com.jarvis.design_system.button.JxButton
                android:id="@+id/btnPrimary"
                style="@style/ButtonPrimary.Mini"
                android:layout_width="wrap_content"
                android:visibility="gone"
                tools:text="Primary" />

            <com.jarvis.design_system.button.JxButton
                android:id="@+id/btnPlain"
                style="@style/ButtonPlain.Mini.SizeS.Style2"
                android:layout_width="wrap_content"
                android:visibility="gone"
                tools:text="Primary" />
        </FrameLayout>
    </RelativeLayout>
</layout>