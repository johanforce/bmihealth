<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/px28"
        android:paddingVertical="@dimen/px4">

        <com.jarvis.design_system.textview.CustomTextView
            android:id="@+id/tvTitle"
            style="@style/T14H20M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px16"
            android:layout_marginEnd="@dimen/px16"
            android:textColor="@color/ink_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvAction"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Total Exercise" />

        <com.jarvis.design_system.textview.CustomTextView
            android:id="@+id/tvAction"
            style="@style/T12H18R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/px16"
            android:background="?selectableItemBackground"
            android:textColor="@color/pri_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Total Exercise" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
