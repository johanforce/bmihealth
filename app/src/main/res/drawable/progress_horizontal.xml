<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#5D5E5D"
                android:centerColor="#3C3C3C"
                android:centerY="0.75"
                android:endColor="#414241"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/white_5"
                    android:centerColor="@color/white_5"
                    android:centerY="0.75"
                    android:endColor="@color/white_5"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/white_5"
                    android:centerColor="@color/white_5"
                    android:centerY="0.75"
                    android:endColor="@color/white_5"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>

