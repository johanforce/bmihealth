<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="homeViewModel"
            type="com.jarvis.bmihealth.presentation.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jarvis.design_system.button.JxButton
            android:id="@+id/btAddProfile"
            style="@style/ButtonPrimary.SizeS"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/px16"
            android:layout_marginTop="@dimen/px20"
            android:paddingHorizontal="@dimen/px20"
            android:text="Add Profile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.jarvis.design_system.button.JxButton
            android:id="@+id/btDeleteFirstProfile"
            style="@style/ButtonPrimary.SizeS"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/px16"
            android:layout_marginTop="@dimen/px20"
            android:paddingHorizontal="@dimen/px20"
            android:text="Delete Profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.jarvis.design_system.textview.CustomTextView
            android:id="@+id/tvFirstProfile"
            style="@style/T14H20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100"
            android:text="First Profile"
            android:layout_marginTop="@dimen/px16"
            android:layout_marginHorizontal="@dimen/px16"
            android:textColor="@color/ink_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btAddProfile" />
        <com.jarvis.design_system.textview.CustomTextView
            android:id="@+id/tvData"
            style="@style/T14H20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Profile"
            android:textColor="@color/ink_4"
            android:layout_marginHorizontal="@dimen/px16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFirstProfile" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>